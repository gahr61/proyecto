extends ../../layout.pug

block contenido
	h1 Mis im√°genes

	div.container
		for imagen in imagenes
			.white.border.tr.large-padding
				.row
					.col-md-10
						h2=imagen.title
					.col-md-2
						//en el link no se debe de utilizar #{} unicamente poniendo el nombre
						//de la variable 
						a(href="/app/imagenes/"+imagen._id+"/edit" class="right-space") Editar
						//para eliminar un elemento utilizamos un formulario ya que necesitamos enviar la variable _method
						form.link(action="/app/imagenes/"+imagen._id+"?_method=DELETE" method="POST")
							input(type="submit" value="Eliminar")

						a(href="/app/imagenes/"+imagen._id+"?_method=-DELETE" class="right-space") elimina
						
			
